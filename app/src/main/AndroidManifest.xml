<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codeguru.blitz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.BlitzCarWash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddCustomers"
            android:label="@string/title_activity_add_customers"
            android:parentActivityName=".activities.BlitzCarWash"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codeguru.blitz.activities.BlitzCarWash" />
        </activity>
        <activity
            android:name=".activities.EditCustomer"
            android:label="@string/title_activity_edit_customer"
            android:parentActivityName=".activities.BlitzCarWash"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codeguru.blitz.activities.BlitzCarWash" />
        </activity>
    </application>

</manifest>